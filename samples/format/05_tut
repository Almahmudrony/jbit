#! /usr/bin/env jbit

; labels are declared with the : postfix
; the > prefix gets you the hi byte
; the < prefix gets you the low byte
; the ? prefix gets you the address relative to the next byte
; no prefix gets you the full address

.size 1 1

	162 0
l1:	189 msg
	240 ?done
	141 2:0
	232
	208 ?l1

done:
	141 2:18
	169 >sleep
	141 2:5
	169 <sleep
	141 2:4

.data

msg: 72 101 108 108 111 44 32 87 111 114 108 100 33 10 0

sleep: 2 0 13 5
