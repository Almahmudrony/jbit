#! /usr/bin/env jbit

.define PUTCHAR 2:0
.define REQPTRLO 2:4
.define REQPTRHI 2:5
.define FRMDRAW 2:18
.define REQ_SLEEP 13

	ldx #0
l1:	lda msg,x
	beq done
	sta PUTCHAR
	inx
	bne l1

done:
	sta FRMDRAW
	lda #>sleep
	sta REQPTRHI
	lda #<sleep
	sta REQPTRLO

.data


msg: "Hello, World!\n" 0

sleep: 2 0 REQ_SLEEP 1
